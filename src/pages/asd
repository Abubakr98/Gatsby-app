import React, { useState, useEffect } from "react"
import Layout from "../components/layout"
import { Link, graphql, useStaticQuery } from "gatsby"
import Head from "../components/head"

import blogStyles from "./blog.module.scss"

const BlogPage = () => {
  const [categories, setCategories] = useState(["Все"])
  const [category, setCategory] = useState("Все")
  const arr = []

  useEffect(() => {
    setCategories(categories => [...categories, ...arr])
  }, arr)

  const data = useStaticQuery(graphql`
    query {
      allContentfulBlogPost(sort: { fields: publishedDate, order: ASC }) {
        nodes {
          title
          slug
          publishedDate(formatString: "MMMM DD, YYYY")
          connectedCategory {
            categoryType
          }
        }
      }
      allContentfulCategory {
        nodes {
          categoryType
        }
      }
    }
  `)
  data.allContentfulCategory.nodes.map((el, i) => {
    arr.push(el.categoryType)
  })
  const types = categories.map((el, i) => {
    return (
      <span className={blogStyles.categories} key={i}>
        {el}
      </span>
    )
  })
  const post = data.allContentfulBlogPost.nodes.map((el, i) => {
    return (
      <li key={i} className={blogStyles.post}>
        <Link to={"/blog/" + el.slug}>
          <span>{el.connectedCategory.categoryType}</span>
          <h2>{el.title}</h2>
          <p>{el.publishedDate}</p>
        </Link>
      </li>
    )
  })
  return (
    <Layout>
      <Head title="Blog" />
      <h1>Blog</h1>
      <div>{types}</div>
      <ol className={blogStyles.posts}>{post}</ol>
    </Layout>
  )
}

export default BlogPage
